.panel.panel-info
  .panel-heading
    %h1 Register
  .panel-body
    %form{data: {ng_submit: "register()"}}
      .row
        .col-md-6
          .input-group.form-group
            %label{for: "email"} E-mail:
            %input#email.form-control{type: "email", placeholder: "Email", data: {ng_model: "user.email"}}/
          .input-group.form-group
            %label{for: "password"} Password:
            %input#password.form-control{type: "password", placeholder: "Password", data: {ng_model: "user.password"}}/
        .col-md-6
          .input-group.form-group
            %label{for: "firstname"} First Name:
            %input#firstname.form-control{type: "text", placeholder: "First Name", data: {ng_model: "user.first_name"}}/
          .input-group.form-group
            %label{for: "lastname"} Last Name:
            %input#lastname.form-control{type: "text", placeholder: "Last Name", data: {ng_model: "user.last_name"}}/
      %input.btn.btn-default.btn-lg{type: "submit", value: "Register"}
